<div id="<%= dom_id product %>">
  <p>
    <strong>Weight:</strong>
    <%= product.weight %>
  </p>

  <p>
    <strong>Length:</strong>
    <%= product.length %>
  </p>

  <p>
    <strong>Width:</strong>
    <%= product.width %>
  </p>

  <p>
    <strong>Height:</strong>
    <%= product.height %>
  </p>

  <p>
    <strong>Departure:</strong>
    <%= product.departure %>
  </p>

  <p>
    <strong>Destination:</strong>
    <%= product.destination %>
  </p>

  <p>
    <strong>Distance:</strong>
    <%= product.distance %> km
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %> rub
  </p>
</div>
